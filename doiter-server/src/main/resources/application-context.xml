<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd"
    default-init-method="init" default-destroy-method="destroy">

    <import resource="datasource.ctx.xml"/>
    <import resource="mybatis.ctx.xml"/>

    <context:annotation-config />
    <context:component-scan base-package="com.doiter"/>

    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
        <property name="messageConverters">
            <list>
                <bean class="org.springframework.http.converter.xml.Jaxb2RootElementHttpMessageConverter">
                    <property name="supportedMediaTypes">
                        <list>
                            <bean class="org.springframework.http.MediaType" factory-method="parseMediaType">
                                <constructor-arg value="text/html" />
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean class="org.springframework.http.converter.StringHttpMessageConverter" />
            </list>
        </property>
    </bean>

    <bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <!-- SYSTEM_PROPERTIES_MODE_OVERRIDE -->
        <property name="systemPropertiesMode" value="2"/>
        <property name="locations">
            <list>
                <!-- Default configuration. All defaults in the same place, so it can be reused many times or changed without which class holds it -->
                <value>classpath:doiter-default.properties</value>
                <!-- Environment specific config. Overrides doiter-default.properties values -->
                <value>classpath:doiter.properties</value>
            </list>
        </property>
    </bean>
    
</beans>