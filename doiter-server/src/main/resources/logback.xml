<configuration>
    <jmxConfigurator />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>[%d{HH:mm:ss.SSS}] [%-5level] [%lo{1}] [%X{transactionInfo}] %msg%n</Pattern>
        </encoder>
    </appender>

    <logger name="com.doiter">
        <level value="DEBUG" />
    </logger>

    <logger name="com.doiter.functional.BasicRest">
        <level value="INFO" />
    </logger>

    <root>
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
    </root>

</configuration>